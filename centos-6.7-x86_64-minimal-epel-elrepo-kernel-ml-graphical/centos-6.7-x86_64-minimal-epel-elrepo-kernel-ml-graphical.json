{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "../scripts/graphical.sh",
        "../scripts/cleanup.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "../centos-6.7-x86_64-minimal-epel-elrepo-kernel-ml/output-virtualbox-ovf/centos-6.7-x86_64-minimal-epel-elrepo-kernel-ml.ova",
      "vm_name": "centos-6.7-x86_64-minimal-epel-elrepo-kernel-ml-graphical",
      "boot_wait": "5s",
      "format": "ova",
      "guest_additions_mode": "disable",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'rm -f /etc/ssh/ssh_host*; rm -f /tmp/shutdown.sh; /sbin/halt -h -p' > /tmp/shutdown.sh; sudo sh /tmp/shutdown.sh",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}","--memory","1024"],
        ["modifyvm", "{{.Name}}","--nictype1","virtio"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "centos-6.7-x86_64-minimal-epel-elrepo-kernel-ml-graphical.box"
    }
  ]
}
