{
  "variables": {
    "os_name": "centos",
    "os_version": "6.7",
    "os_arch": "x86_64",
    "os_iso": "minimal",
    "os_iso_url": "https://mirrors.kernel.org/centos/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
    "os_iso_checksum": "9d3fec5897be6b3fed4d3dda80b8fa7bb62c616bbfd4bdcd27295ca9b764f498",
    "box_description": "epel",
    "username": "vagrant"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "../scripts/cleanup.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "{{ user `os_name` }}-{{user `os_version`}}-{{user `os_arch`}}-{{user `os_iso`}}-{{user `box_description`}}",
      "boot_command": [
        "<tab> text selinux=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos6.kickstart<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 122880,
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_url": "{{user `os_iso_url`}}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `os_iso_checksum`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `username`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'rm -f /etc/ssh/ssh_host*; rm -f /tmp/shutdown.sh; /sbin/halt -h -p' > /tmp/shutdown.sh; sudo sh /tmp/shutdown.sh",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}","--memory","1024"]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{ user `os_name` }}-{{user `os_version`}}-{{user `os_arch`}}-{{user `os_iso`}}-{{user `box_description`}}.box"
    }
  ]
}
